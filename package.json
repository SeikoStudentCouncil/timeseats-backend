    "figlet": "^1.8.0",
    "hono": "^4.7.5",
    "hono-openapi": "^0.4.6",
    "pino": "^9.6.0",
    "zod": "^3.24.2",
    "zod-openapi": "^4.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/figlet": "^1.7.0",
